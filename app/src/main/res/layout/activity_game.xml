<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_darker"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="10dp">


    <LinearLayout
        android:id="@+id/game_relative_layout_boy_score"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="top"
        android:orientation="vertical">

        <TextView
            android:id="@+id/game_LBL_score_player_one"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fontFamily="@font/itim"
            android:gravity="bottom|center"
            android:text="0"
            android:textColor="@color/very_soft_orange"
            android:textSize="40sp" />

        <ImageView
            android:id="@+id/game_IMG_boy"
            android:layout_width="90dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:src="@drawable/boy" />

        <TextView
            android:id="@+id/game_LBL_name_play_one"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:fontFamily="@font/itim"
            android:gravity="top"
            android:padding="5dp"
            android:textColor="@color/bright_orange"
            android:textSize="30sp"
            android:textStyle="bold" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/game_linear_layout_images_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="10dp"
        android:layout_weight="1"

        android:orientation="vertical">

        <ProgressBar
            android:id="@+id/game_PGR_determinateBar"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"

            />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/game_IMG_card_player_one"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:padding="5dp"
                android:src="@drawable/img_begin_card" />

            <ImageView
                android:id="@+id/game_IMG_card_player_two"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:padding="5dp"
                android:src="@drawable/img_begin_card" />

        </LinearLayout>

        <ImageButton

            android:id="@+id/game_BTN_play_game"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:background="@drawable/play_button"
            android:padding="5dp" />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/game_relative_layout_girl_score_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/game_LBL_score_player_two"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fontFamily="@font/itim"

            android:gravity="bottom|center"
            android:text="0"
            android:textColor="@color/very_soft_orange"
            android:textSize="40sp" />

        <ImageView
            android:id="@+id/game_ING_girl"
            android:layout_width="90dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:src="@drawable/girl" />

        <TextView
            android:id="@+id/game_LBL_name_play_two"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:fontFamily="@font/itim"
            android:gravity="top"
            android:padding="5dp"
            android:text=""
            android:textColor="@color/bright_orange"
            android:textSize="30sp"
            android:textStyle="bold" />


    </LinearLayout>


</LinearLayout>