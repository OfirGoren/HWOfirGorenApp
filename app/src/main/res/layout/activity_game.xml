<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_darker"
    android:padding="5dp"
    tools:context=".GameActivity">

    <RelativeLayout
        android:id="@+id/game_relative_layout_boy_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/game_LBL_score_player_one"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/very_soft_orange"
            android:textSize="80sp" />

        <ImageView
            android:id="@+id/game_IMG_boy"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@id/game_LBL_score_player_one"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:src="@drawable/boy" />

        <TextView
            android:id="@+id/game_LBL_name_play_one"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/game_IMG_boy"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Ofir"
            android:textColor="@color/bright_orange"
            android:textSize="40sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/game_relative_layout_images_card"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_above="@id/game_BTN_play_game"
        android:layout_toStartOf="@id/game_relative_layout_girl_score_name"
        android:layout_toEndOf="@+id/game_relative_layout_boy_score"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/game_IMG_card_player_one"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="5dp"
            android:src="@drawable/img_begin_card" />

        <ImageView
            android:id="@+id/game_IMG_card_player_two"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="5dp"
            android:src="@drawable/img_begin_card" />

    </LinearLayout>

    <ImageButton

        android:id="@+id/game_BTN_play_game"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/play_button" />

    <RelativeLayout
        android:id="@+id/game_relative_layout_girl_score_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/game_LBL_score_player_two"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/very_soft_orange"
            android:textSize="80sp" />

        <ImageView
            android:id="@+id/game_ING_girl"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@id/game_LBL_score_player_two"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:src="@drawable/girl" />

        <TextView
            android:id="@+id/game_LBL_name_play_two"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/game_ING_girl"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Irena"
            android:textColor="@color/bright_orange"
            android:textSize="40sp"
            android:textStyle="bold" />


    </RelativeLayout>


</RelativeLayout>