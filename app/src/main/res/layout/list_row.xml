<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/very_soft_orange"
    android:orientation="horizontal"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="left"
        android:orientation="vertical">


        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/list_row_LBL_numbering"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/itim"
                android:gravity="left"
                android:text=""
                android:textColor="@color/blue_darker"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/list_row_LBL_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/itim"
                android:text=""
                android:textColor="@color/blue_darker"
                android:textSize="25sp"
                android:textStyle="bold" />


        </LinearLayout>

        <TextView
            android:id="@+id/list_row_LBL_coordinates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/itim"
            android:text=""
            android:textColor="@color/blue_darker"
            android:textSize="15sp" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="right"
        android:orientation="vertical">

        <TextView
            android:id="@+id/list_LBL_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:fontFamily="@font/itim"
            android:textColor="@color/blue_darker"
            android:textSize="25sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/list_row_LBL_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:fontFamily="@font/itim"
            android:text=""
            android:textColor="@color/blue_darker"
            android:textSize="15sp" />


    </LinearLayout>


</LinearLayout>